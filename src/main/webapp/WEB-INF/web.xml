  <filter>
    <filter-name>EventFilter</filter-name>
    <filter-class>
			com.flyrui.framework.web.filter.EventFilter
		</filter-class>
    <init-param>
      <param-name>noEventPage</param-name>
      <param-value>404.jsp,500.jsp</param-value>
